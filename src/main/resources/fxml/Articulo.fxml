<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.nex.articulo.ArticuloController">
    <top>
        <AnchorPane prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>
                <Pane nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" prefWidth="200.0" AnchorPane.leftAnchor="10.0">
                    <children>
                  
                        <Button fx:id="addnewBtn" layoutX="140.0" layoutY="13.0" mnemonicParsing="false" onAction="#Add">
                            <graphic>
                                <ImageView fitHeight="25.0" fitWidth="25.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/plus_48.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>                        
                        <Button fx:id="updateBtn" layoutX="80.0" layoutY="13.0" mnemonicParsing="false" onAction="#Update">
                            <graphic>
                                <ImageView fitHeight="25.0" fitWidth="25.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pencil_48.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>                        
                        <Button fx:id="deleteBtn" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#Delete">
                            <graphic>
                                <ImageView fitHeight="25.0" fitWidth="25.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/delete_48.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
                <Pane layoutX="297.0" prefHeight="50.0" prefWidth="303.0" AnchorPane.rightAnchor="10.0">
                    <children>
                        <Button fx:id="signOut" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="250.0" layoutY="13.0" mnemonicParsing="false" onAction="#goSignOut" text="Salir" />
                        <TextField fx:id="searchBox" layoutY="13.0" onInputMethodTextChanged="#Search" onKeyReleased="#Search" prefHeight="25.0" prefWidth="200.0" promptText="Buscar" />
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="table" layoutX="-9.0" layoutY="14.0" onMouseClicked="#showOnClick" prefHeight="358.0" prefWidth="417.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colCodigo" prefWidth="187.0" text="Codigo" />
                        <TableColumn fx:id="colNombre" prefWidth="187.0" text="Nombre" />
                        <TableColumn fx:id="colImporte" prefWidth="127.0" text="Importe" />
                        <TableColumn fx:id="colObservacion" prefWidth="102.0" text="Observacion" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
